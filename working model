    }

    // Example: Set the initial consumed calories (you can replace it with your logic)
    const initialCalories = ;
    setCalorieProgress(initialCalories);

    // Function to set the width of the progress bar based on consumed calories
    function setCalorieProgress(consumedCalories) {
        const progressBar = document.getElementById("calorie-progress");
        const maxWidth = 3000; // Set the maximum calories you want to represent

        // Calculate the width percentage based on consumed calories
        const widthPercentage = (consumedCalories / maxWidth) * 100;

        
        progressBar.style.width = `${widthPercentage}%`;
    }
</script>

